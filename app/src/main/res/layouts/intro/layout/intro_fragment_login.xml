<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fitsSystemWindows="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/baseline"
        tools:context=".ui.intro.LoginIntroFragment">

    <com.afollestad.aesthetic.AestheticImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/baseline_4x"
            android:layout_marginRight="@dimen/baseline_4x"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/intro_login" />

    <com.afollestad.aesthetic.AestheticTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline_2x"
            android:gravity="center"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/title_login"
            android:textColor="?android:textColorPrimary"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/ifl_google_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/baseline"
        android:layout_marginLeft="@dimen/baseline_4x"
        android:layout_marginRight="@dimen/baseline_4x" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/ifl_facebook_button"
        xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/baseline"
        android:layout_marginLeft="@dimen/baseline_4x"
        android:layout_marginRight="@dimen/baseline_4x"
        facebook:com_facebook_login_text="@string/continue_with_facebook"
        style="@style/FacebookLoginButton"/>

    <com.hugocastelani.ivory.ui.intro.util.CustomTwitterLoginButton
        android:id="@+id/ifl_twitter_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/baseline"
        android:layout_marginLeft="@dimen/baseline_4x"
        android:layout_marginRight="@dimen/baseline_4x"/>

</LinearLayout>