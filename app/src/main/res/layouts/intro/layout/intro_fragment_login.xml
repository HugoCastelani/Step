<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fitsSystemWindows="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/baseline"
        tools:context=".ui.intro.PermissionIntroFragment">

    <com.afollestad.aesthetic.AestheticImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/baseline_4x"
            android:layout_marginStart="@dimen/baseline_4x"
            android:layout_marginRight="@dimen/baseline_4x"
            android:layout_marginEnd="@dimen/baseline_4x"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/intro_3" />

    <com.afollestad.aesthetic.AestheticTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline_2x"
            android:gravity="center"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/title_3"
            android:textColor="?android:textColorPrimary"/>

    <com.google.android.gms.common.SignInButton
            android:id="@+id/ifl_google_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline"/>

</LinearLayout>