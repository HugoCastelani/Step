<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <com.afollestad.aesthetic.AestheticRecyclerView
        android:id="@+id/mf_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>

    <ImageView
        android:id="@+id/mf_place_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/baseline_6x"
        android:layout_marginStart="@dimen/baseline_6x"
        android:layout_marginRight="@dimen/baseline_6x"
        android:layout_marginEnd="@dimen/baseline_6x"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/place_holder"
        android:visibility="gone"/>

</FrameLayout>
