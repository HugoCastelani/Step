<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/baseline"
    android:background="?colorPrimary"
    tools:context=".ui.splashscreen.SplashScreenActivity">

    <com.afollestad.aesthetic.AestheticImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/baseline_4x"
        android:layout_marginStart="@dimen/baseline_4x"
        android:layout_marginRight="@dimen/baseline_4x"
        android:layout_marginEnd="@dimen/baseline_4x"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/intro_about" />

    <com.afollestad.aesthetic.AestheticTextView
        android:id="@+id/ssa_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/baseline_4x"
        android:gravity="center"
        android:text="@string/connecting"/>

    <com.afollestad.aesthetic.AestheticButton
        android:id="@+id/ssa_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/baseline_4x"
        android:text="@string/try_again"
        android:visibility="gone"/>

    <com.afollestad.aesthetic.AestheticProgressBar
        android:id="@+id/ssa_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_marginTop="@dimen/baseline_4x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
