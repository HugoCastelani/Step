<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/baseline"
    android:background="?colorPrimary"
    tools:context=".ui.splashscreen.SplashScreenActivity">

    <com.afollestad.aesthetic.AestheticImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/intro_1"
        android:contentDescription="@string/app_name" />

    <com.afollestad.aesthetic.AestheticTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/baseline_4x"
        android:gravity="center"
        android:text="@string/splash_screen_activity_updating"/>

    <com.afollestad.aesthetic.AestheticProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_marginTop="@dimen/baseline_4x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
