<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notification.NotificationFragment">

    <com.afollestad.aesthetic.AestheticProgressBar
        android:id="@+id/nf_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <com.afollestad.aesthetic.AestheticRecyclerView
        android:id="@+id/nf_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:scrollbars="vertical"/>

    <ImageView
        android:id="@+id/nf_place_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/baseline_6x"
        android:layout_marginStart="@dimen/baseline_6x"
        android:layout_marginRight="@dimen/baseline_6x"
        android:layout_marginEnd="@dimen/baseline_6x"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/place_holder"
        android:visibility="gone"/>

</FrameLayout>
