<?xml version="1.0" encoding="utf-8"?>
<com.afollestad.aesthetic.AestheticCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/iu_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="62dp"
    app:contentPadding="@dimen/activity_horizontal_margin"
    app:cardCornerRadius="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.afollestad.aesthetic.AestheticProgressBar
            android:id="@+id/iu_progress_bar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="?android:attr/progressBarStyle"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iu_pic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/intro_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.afollestad.aesthetic.AestheticTextView
            android:id="@+id/iu_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iu_pic"
            android:paddingLeft="64dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp"/>

    </android.support.constraint.ConstraintLayout>

</com.afollestad.aesthetic.AestheticCardView>