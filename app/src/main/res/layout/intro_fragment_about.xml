<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="false"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/baseline">

    <com.afollestad.aesthetic.AestheticImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/baseline_4x"
        android:layout_marginStart="@dimen/baseline_4x"
        android:layout_marginRight="@dimen/baseline_4x"
        android:layout_marginEnd="@dimen/baseline_4x"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/intro_1" />

    <LinearLayout
        android:id="@+id/intro_about_before_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.afollestad.aesthetic.AestheticTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline_4x"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/description_1_3"
            android:textColor="?android:textColorSecondary"/>

        <com.afollestad.aesthetic.AestheticProgressBar
            android:id="@+id/splash_screen_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_marginTop="@dimen/baseline_4x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/intro_about_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.afollestad.aesthetic.AestheticTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline_2x"
            android:gravity="center"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/title_1_2"
            android:textColor="?android:textColorPrimary"/>

        <com.afollestad.aesthetic.AestheticTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/description_1_2"
            android:textColor="?android:textColorSecondary"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/intro_about_after_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.afollestad.aesthetic.AestheticTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline_2x"
            android:gravity="center"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/title_1_1"
            android:textColor="?android:textColorPrimary"/>

        <com.afollestad.aesthetic.AestheticTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/description_1_1"
            android:textColor="?android:textColorSecondary"/>

    </LinearLayout>

</LinearLayout>