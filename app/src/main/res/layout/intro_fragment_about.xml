<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fitsSystemWindows="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/mi_baseline">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mi_baseline_quadruple"
                android:layout_marginStart="@dimen/mi_baseline_quadruple"
                android:layout_marginRight="@dimen/mi_baseline_quadruple"
                android:layout_marginEnd="@dimen/mi_baseline_quadruple"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/intro_1" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mi_baseline_double"
                android:gravity="center"
                android:textSize="26sp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/title_1"
                android:textColor="?android:textColorPrimary"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mi_baseline"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/description_1"
                android:textColor="?android:textColorSecondary"/>

</LinearLayout>