<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="false"
    tools:context="com.enoughspam.step.intro.PermissionIntroFragment">

    <LinearLayout
        android:id="@+id/intro_confirmation_parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/baseline"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.afollestad.aesthetic.AestheticImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/baseline_4x"
            android:layout_marginStart="@dimen/baseline_4x"
            android:layout_marginRight="@dimen/baseline_4x"
            android:layout_marginEnd="@dimen/baseline_4x"
            android:gravity="center"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/intro_5"/>

        <com.afollestad.aesthetic.AestheticTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline_2x"
            android:gravity="center"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/title_5"
            android:textColor="?android:textColorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.afollestad.aesthetic.AestheticEditText
                android:id="@+id/intro_confirmation_code"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="6"
                android:layout_weight=".50"/>

            <com.afollestad.aesthetic.AestheticImageView
                android:id="@+id/intro_confirmation_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_arrow_forward"
                android:layout_weight=".02"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>