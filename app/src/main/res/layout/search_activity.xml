<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.enoughspam.step.search.SearchActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.afollestad.aesthetic.AestheticToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/search_toolbar_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/toolbar_padding">

                <com.afollestad.aesthetic.AestheticEditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/search_toolbar_parent"
                    app:layout_constraintBottom_toBottomOf="@id/search_toolbar_parent"
                    app:layout_constraintStart_toStartOf="@id/search_toolbar_parent"
                    app:layout_constraintEnd_toStartOf="@+id/search_clear_icon"
                    android:layout_marginRight="@dimen/toolbar_padding"
                    android:imeOptions="actionSearch|flagNoFullscreen"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_user"/>

                <ImageView
                    android:id="@+id/search_clear_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/search_toolbar_parent"
                    app:layout_constraintEnd_toEndOf="@id/search_toolbar_parent"
                    app:layout_constraintBottom_toBottomOf="@id/search_toolbar_parent"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_clear"/>

            </android.support.constraint.ConstraintLayout>
            
        </com.afollestad.aesthetic.AestheticToolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <com.afollestad.aesthetic.AestheticRecyclerView
            android:id="@+id/search_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/search_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:visibility="gone">

            <com.afollestad.aesthetic.AestheticProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyle"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_no_results"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center">

            <com.afollestad.aesthetic.AestheticTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/search_no_results"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
