<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/number_form_spinner"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mi_baseline"
        android:spinnerMode="dialog"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/mi_baseline"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:textSize="26sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="+"/>

        <EditText
            android:id="@+id/number_form_country_code"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/mi_baseline_half_half"
            android:layout_marginEnd="@dimen/mi_baseline_half_half"
            android:layout_marginLeft="@dimen/mi_baseline_half_half"
            android:layout_marginStart="@dimen/mi_baseline_half_half"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="9"
            android:layout_weight="0.2"/>

        <EditText
            android:id="@+id/number_form_phone"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/mi_baseline_half_half"
            android:layout_marginEnd="@dimen/mi_baseline_half_half"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="19"
            android:layout_weight="0.75"/>

        <ImageView
            android:id="@+id/number_form_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:background="?selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_arrow_forward"
            android:layout_weight="0.02"/>

    </LinearLayout>

</LinearLayout>