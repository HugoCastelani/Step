<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="false"
    tools:context="com.enoughspam.step.intro.PermissionIntroFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/mi_baseline"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mi_baseline_quadruple"
            android:layout_marginStart="@dimen/mi_baseline_quadruple"
            android:layout_marginRight="@dimen/mi_baseline_quadruple"
            android:layout_marginEnd="@dimen/mi_baseline_quadruple"
            android:gravity="center"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/intro_4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mi_baseline_double"
            android:gravity="center"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/title_4"
            android:textColor="?android:textColorPrimary"/>

        <LinearLayout
            android:id="@+id/number_form_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mi_baseline"
            android:orientation="vertical"/>

    </LinearLayout>

</ScrollView>