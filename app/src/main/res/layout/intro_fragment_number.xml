<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="false"
    tools:context="com.enoughspam.step.intro.PermissionIntroFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/mi_baseline">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mi_baseline_quadruple"
            android:layout_marginStart="@dimen/mi_baseline_quadruple"
            android:layout_marginRight="@dimen/mi_baseline_quadruple"
            android:layout_marginEnd="@dimen/mi_baseline_quadruple"
            android:gravity="center"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/intro_4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mi_baseline_double"
            android:gravity="center"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/title_4"
            android:textColor="?android:textColorPrimary"/>

        <Spinner
            android:id="@+id/intro_number_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mi_baseline"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/mi_baseline"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:textSize="26sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="+"/>

            <EditText
                android:id="@+id/intro_number_country_code"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/mi_baseline_half_half"
                android:layout_marginEnd="@dimen/mi_baseline_half_half"
                android:layout_marginLeft="@dimen/mi_baseline_half_half"
                android:layout_marginStart="@dimen/mi_baseline_half_half"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="10"
                android:layout_weight="0.2"/>

            <EditText
                android:id="@+id/intro_number_phone"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/mi_baseline_half_half"
                android:layout_marginEnd="@dimen/mi_baseline_half_half"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="20"
                android:layout_weight="0.75"/>

            <ImageView
                android:id="@+id/intro_number_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_arrow_forward"
                android:layout_weight="0.02"/>

        </LinearLayout>

        <!--TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/mi_baseline"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/description_4"
            android:textColor="?android:textColorSecondary"/>

        <EditText
            android:id="@+id/intro_number_code"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/mi_baseline" /-->

    </LinearLayout>

</ScrollView>