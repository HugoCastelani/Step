<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fitsSystemWindows="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/mi_baseline"
        tools:context="com.enoughspam.step.intro.PermissionIntroFragment">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mi_baseline_quadruple"
            android:layout_marginStart="@dimen/mi_baseline_quadruple"
            android:layout_marginRight="@dimen/mi_baseline_quadruple"
            android:layout_marginEnd="@dimen/mi_baseline_quadruple"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/intro_2" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mi_baseline_double"
            android:gravity="center"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/title_2"
            android:textColor="?android:textColorPrimary"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mi_baseline"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/description_2"
            android:textColor="?android:textColorSecondary"/>

    <Button
            android:id="@+id/intro_permission_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mi_baseline"
            android:text="@string/grant_permissions"/>

</LinearLayout>