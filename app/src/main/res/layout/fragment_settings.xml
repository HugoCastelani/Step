<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_settings"
        tools:context="com.enoughspam.step.settings.SettingsFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- fist cardview -->

        <TextView android:id="@+id/settings_textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimary"
                android:text="@string/select_theme_colors"
                style="@style/CardLabel"/>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Card">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true">

                    <Switch
                            android:id="@+id/settings_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/settings_switch"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingEnd="@dimen/activity_horizontal_margin"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:textSize="16sp"
                                android:textColor="?android:textColorPrimary"
                                android:text="@string/set_dark_theme"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="?android:textColorSecondary"
                                android:text="@string/set_dark_theme_substring"/>


                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true">

                    <com.afollestad.materialdialogs.color.CircleView
                            android:id="@+id/color_preview"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/color_preview"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingEnd="@dimen/activity_horizontal_margin"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:textSize="16sp"
                                android:textColor="?android:textColorPrimary"
                                android:text="@string/select_accent_color"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="?android:textColorSecondary"
                                android:text="@string/select_accent_color_substring"/>

                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="2dp"
                            android:textSize="16sp"
                            android:textColor="?android:textColorPrimary"
                            android:text="@string/restore_default_colors"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="4dp"
                            android:textSize="14sp"
                            android:textColor="?android:textColorSecondary"
                            android:text="@string/restore_default_colors_substring"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- second cardview -->

        <TextView android:id="@+id/settings_textview2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="?android:textColorPrimary"
                  android:text="@string/select_database_options"
                  style="@style/CardLabel"/>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Card">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="2dp"
                            android:textSize="16sp"
                            android:textColor="?android:textColorPrimary"
                            android:text="@string/select_database_network"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="4dp"
                            android:textSize="14sp"
                            android:textColor="?android:textColorSecondary"
                            android:text="@string/select_database_network_substring"/>

                </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- third cardview -->

        <TextView android:id="@+id/settings_textview3"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="?android:textColorPrimary"
                  android:text="@string/select_block_calls_options"
                  style="@style/CardLabel"/>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_label_top_bottom_padding"
                style="@style/Card">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:textSize="16sp"
                                android:textColor="?android:textColorPrimary"
                                android:text="@string/select_services_block"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="4dp"
                                android:textSize="14sp"
                                android:textColor="?android:textColorSecondary"
                                android:text="@string/select_services_block_substring"/>
                    </LinearLayout>

                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true">

                        <ImageView
                                android:id="@+id/settings_help"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/ic_help"
                                android:contentDescription="@string/help"/>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/settings_help"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:paddingEnd="@dimen/activity_horizontal_margin"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="2dp"
                                    android:textSize="16sp"
                                    android:textColor="?android:textColorPrimary"
                                    android:text="@string/select_suspicious_treatment"/>

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="4dp"
                                    android:textSize="14sp"
                                    android:textColor="?android:textColorSecondary"
                                    android:text="@string/select_suspicious_treatment_substring"/>
                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true">

                        <Switch
                                android:id="@+id/settings_switch2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/ic_help"
                                android:contentDescription="@string/help"/>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/settings_switch2"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:paddingEnd="@dimen/activity_horizontal_margin"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="2dp"
                                    android:textSize="16sp"
                                    android:textColor="?android:textColorPrimary"
                                    android:text="@string/select_feedback_options"/>

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="4dp"
                                    android:textSize="14sp"
                                    android:textColor="?android:textColorSecondary"
                                    android:text="@string/select_feedback_options_substring"/>

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:textSize="14sp"
                                    android:text="(Sample) Números suspeitos e contatos"
                                    android:textStyle="bold"/>

                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true">

                        <ImageView
                                android:id="@+id/settings_help2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/ic_help"
                                android:contentDescription="@string/help"/>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/settings_help2"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:paddingEnd="@dimen/activity_horizontal_margin"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="2dp"
                                    android:textColor="?android:textColorPrimary"
                                    android:textSize="16sp"
                                    android:text="@string/select_denunciation_amount"/>

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="8dp"
                                    android:textSize="14sp"
                                    android:text="@string/select_denunciation_amount_substring"/>

                            <com.afollestad.aesthetic.views.AestheticSeekBar
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingStart="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingEnd="10dp"
                                    android:max="95"/>

                            <android.support.constraint.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        android:text="005"/>

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintRight_toRightOf="parent"
                                        android:text="100"/>

                            </android.support.constraint.ConstraintLayout>

                            <Button android:id="@+id/settings_default_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    android:textColor="#F00"
                                    android:text="@string/restore_default_denunciation"/>

                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
