<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="@dimen/toolbar_padding"
    android:background="@color/md_white_1000"
    android:elevation="4dp"
    android:orientation="vertical">

    <com.afollestad.aesthetic.AestheticImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:onClick="onBackPressed"/>

    <com.afollestad.aesthetic.AestheticProgressBar
        android:id="@+id/profile_progress_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_circle_view"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:elevation="8dp"
        android:visibility="gone"/>

    <com.afollestad.aesthetic.AestheticTextView
        android:id="@+id/profile_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_padding"
        android:textColor="?android:textColorPrimary"
        android:textSize="24sp"/>

    <com.afollestad.aesthetic.AestheticTextView
        android:id="@+id/profile_social_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_padding"
        android:textColor="?android:textColorPrimary"
        android:text="Logado via Google+"/>

    <com.afollestad.aesthetic.AestheticButton
        android:id="@+id/profile_delete_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_padding"
        android:text="@string/profile_follow"/>

</LinearLayout>