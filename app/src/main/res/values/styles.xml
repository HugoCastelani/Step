<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m" >true</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="material_drawer_selected">@color/colorDrawableSelectInverse</item>
    </style>

    <style name="CardLabel">
        <item name="android:paddingTop">@dimen/preference_category_top_bottom_padding</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:paddingRight">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:paddingBottom">@dimen/preference_category_top_bottom_padding</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Card">
        <item name="android:minHeight">58dp</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

</resources>
